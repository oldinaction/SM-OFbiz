<entity-eca xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/entity-eca.xsd">
   
    <!-- EECA(实体ECA)
    	1、实体操作类型
	        create
			store
			remove
			find
			create-store (create or store/update)
			create-remove
			store-remove
			create-store-remove
			any
		2、return事件是至此EECA使用最多的事件。但也存在 validate, run, cache-check,cache-put 和 cache-clear事件。也有run-on-error属性。
     -->
     
    <!-- 当新建SmPerson记录返回时，且username和description不为空，则运行新建SmPerson日志 -->
    <eca entity="SmPerson" operation="create" event="return">
        <condition field-name="username" operator="is-not-empty"/>
        <condition field-name="description" operator="is-not-empty"/>
        <set field-name="username" env-name="username"/>
        <set field-name="description" env-name="description"/>
        <set field-name="smPersonId" env-name="id"/>
        <action service="createSmPersonLogOfServiceEeca" mode="sync"/>
    </eca>

</entity-eca>
