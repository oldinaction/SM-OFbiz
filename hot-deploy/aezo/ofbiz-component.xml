<?xml version="1.0" encoding="UTF-8"?>
<ofbiz-component name="aezo"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/ofbiz-component.xsd">
	<!-- define resource loaders; most common is to use the component resource loader -->
	<resource-loader name="main" type="component" />

	<!-- place the config directory on the classpath to access configuration files -->
	<classpath type="dir" location="config" />
	<classpath type="dir" location="dtd" />

	<!-- load single or multiple external libraries -->
	<classpath type="jar" location="build/lib/*" />
	<classpath type="jar" location="lib/*" />

	<!-- entity resources: model(s), eca(s), group, and data definitions -->
	<entity-resource type="model" reader-name="main" loader="main" location="entitydef/entitymodel.xml" />
	<entity-resource type="eca" reader-name="main" loader="main" location="entitydef/entitymodel_eecas.xml"/>
	<entity-resource type="data" reader-name="seed" loader="main" location="data/AezoTypeData.xml" />
	<entity-resource type="data" reader-name="seed" loader="main" location="data/AezoSecurityPermissionSeedData.xml" />
	<entity-resource type="data" reader-name="demo" loader="main" location="data/AezoSecurityGroupDemoData.xml" />
	<entity-resource type="data" reader-name="demo" loader="main" location="data/AezoDemoData.xml" />

	<!-- service resources: model(s), eca(s) and group definitions -->
	<service-resource type="model" loader="main" location="servicedef/services_service.xml" />
	<service-resource type="eca" loader="main" location="servicedef/service_secas.xml"/>
	
	<service-resource type="model" loader="main" location="servicedef/services_security.xml" />
	
	<service-resource type="model" loader="main" location="servicedef/services_minilang.xml" />
	
	<service-resource type="model" loader="main" location="servicedef/services_test.xml" />
	<!-- <service-resource type="group" loader="main" location="servicedef/groups.xml"/> -->

	<test-suite loader="main" location="testdef/AezoTests.xml" />

	<!-- web applications; will be mounted when using the embedded container -->
	<webapp name="aezo" 
		title="Aezo" 
		server="default-server"
		location="webapp/aezo" 
		base-permission="OFBTOOLS,AEZO" 
		mount-point="/aezo" />
		
	<webapp name="service" 
		title="Service" 
		server="default-server"
		location="webapp/service" 
		base-permission="OFBTOOLS,AEZO" 
		mount-point="/service" />
		
	<webapp name="security" 
		title="Security" 
		server="default-server"
		location="webapp/security" 
		base-permission="OFBTOOLS,AEZO" 
		mount-point="/security" />
</ofbiz-component>
