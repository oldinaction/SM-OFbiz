<?xml version="1.0" encoding="UTF-8"?>
<services xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/services.xsd">
	<description>aezo Services</description>
	<vendor></vendor>
	<version>1.0</version>

	<service name="noSyntaxError" engine="interface">
		<description>
            Dummy service to prevent empty files and syntax error - Remove when the 1st real service will be added here 
        </description>
	</service>

	<service name="createSmPersonOfServiceBasic" engine="java" default-entity-name="SmPerson" auth="false"
		invoke="createSmPersonOfServiceBasic" location="cn.aezo.service.Basic">
		<description>用java实现service：产生一条SmPerson记录</description>
		<attribute name="username" mode="IN" type="String"/>
		<attribute name="password" mode="IN" type="String"/>
		<attribute name="description" mode="IN" type="String" optional="true"/>
	</service>
	<service name="createSmPersonOfService" engine="simple" default-entity-name="SmPerson"
		invoke="createSmPersonOfService" location="component://aezo/script/cn/aezo/service/Services.xml">
		<description>用minilang实现service：产生一条SmPerson记录</description>
		<attribute name="username" mode="IN" type="String"/>
		<attribute name="password" mode="IN" type="String"/>
		<attribute name="description" mode="IN" type="String" optional="true"/>
		<attribute name="id" mode="OUT" type="String"></attribute>
	</service>
	
	<service name="autoAttributes" engine="simple" default-entity-name="SmPerson" auth="false"
		invoke="autoAttributes" location="component://aezo/script/cn/aezo/service/Services.xml">
		<description>利用自动传入传出参数产生一条SmPerson记录</description>
		<!-- 使用auto-attributes必须指明default-entity-name 如果auto-attributes传入参数没有定时optional="true"，则表示该entity的所有字段都需要传入。表单只需要将input的name属性和实体的字段对应即可 -->
		<auto-attributes include="nonpk" mode="IN"></auto-attributes>
		<auto-attributes include="pk" mode="OUT"></auto-attributes>
	</service>
	
	<service name="createSmPersonOfServiceSeca" engine="java" default-entity-name="SmPerson" auth="false"
		invoke="createSmPersonOfServiceSeca" location="cn.aezo.service.Eca">
		<description>seca：产生一条SmPerson记录</description>
		<auto-attributes include="nonpk" mode="IN" optional="true"></auto-attributes>
		<auto-attributes include="pk" mode="OUT"></auto-attributes>
	</service>
	<service name="createSmPersonHobbyOfServiceSeca" engine="java" default-entity-name="SmPersonHobby" auth="false"
		invoke="createSmPersonHobbyOfServiceSeca" location="cn.aezo.service.Eca">
		<description>seca：产生一条SmPersonHobby记录</description>
		<auto-attributes include="nonpk" mode="IN" optional="true"></auto-attributes>
		<attribute name="smPersonSex" mode="IN" type="String"></attribute>
		<auto-attributes include="pk" mode="OUT"></auto-attributes>
	</service>
	<service name="createSmPersonLogOfServiceEeca" engine="java" default-entity-name="SmPersonCreateLog" auth="false"
		invoke="createSmPersonLogOfServiceEeca" location="cn.aezo.service.Eca">
		<description>eeca：产生一条SmPersonCreateLog记录</description>
		<auto-attributes include="nonpk" mode="IN" optional="true"></auto-attributes>
	</service>
	
	<service name="jsonSearch" engine="simple"
		invoke="jsonSearch" location="component://aezo/script/cn/aezo/service/Services.xml">
		<description>利用传入json字符串查找SmPerson记录</description>
		<attribute name="jsonStr" mode="IN" type="String"></attribute>
		<attribute name="retJson" mode="OUT" type="String"></attribute>
	</service>
	
	<service name="createSmPersonOfServiceJob" engine="java" default-entity-name="SmPerson"
		invoke="createSmPersonOfServiceJob" location="cn.aezo.service.MyJobTest">
		<description>定时服务：产生一条SmPerson记录</description>
		<!-- 此处可以传入参数，为了测试方便，值在方法中设置为固定的了 -->
	</service>



</services>