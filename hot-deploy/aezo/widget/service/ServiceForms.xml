<?xml version="1.0" encoding="UTF-8"?>
<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-form.xsd">
	
	<!-- 服务的自动传递参数 -->
	<form type="single" name="autoAttributes" default-entity-name="SmPerson" target="autoAttributesFormTarget" target-type="intra-app">
		<field name="id">
			<text disabled="true" default-value="${parametes.id}"></text>
		</field>
		<field name="username" required-field="true">
			<text></text>
		</field>
		<field name="password" required-field="true">
			<text></text>
		</field>
		<field name="description" required-field="true">
			<text></text>
		</field>
		<field name="submit">
			<submit />
		</field>
	</form>

</forms>