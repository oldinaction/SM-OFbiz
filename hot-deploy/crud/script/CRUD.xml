<?xml version="1.0" encoding="UTF-8" ?>
<simple-methods xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/simple-methods-v2.xsd">

	<simple-method method-name="createCrudPerson" short-description="新增">
		<make-value entity-name="CrudPerson" value-field="newEntity" /><!-- 创建一个CrudPerson实体对象 -->
		<sequenced-id sequence-name="CrudPerson" field="newEntity.id" /><!-- 递增的主键 -->
		<set field="newEntity.username" from-field="parameters.username" /><!-- 设置实体相应字段的值 -->
		<set field="newEntity.password" from-field="parameters.password" />
		<set field="newEntity.description" from-field="parameters.description" />
		<create-value value-field="newEntity" /><!-- 往数据库新增一条记录 -->
		<field-to-result field="newEntity.id" result-name="id"/>
	</simple-method>
	
	<simple-method method-name="updateCrudPerson" short-description="修改">
		<entity-one value-field="upEntity" entity-name="CrudPerson">
			<field-map field-name="id" from-field="parameters.id"/>
		</entity-one>
		<log message="正在修改的记录是==>${upEntity}" level="info"/>
		<set field="upEntity.username" from-field="parameters.username" />
		<set field="upEntity.password" from-field="parameters.password" />
		<set field="upEntity.description" from-field="parameters.description" />
		<store-value value-field="upEntity"/>
		<field-to-result field="parameters.id" result-name="id"/>
	</simple-method>
	
	<simple-method method-name="deleteCrudPerson" short-description="删除">
		<entity-one value-field="delEntity" entity-name="CrudPerson">
			<field-map field-name="id" from-field="parameters.id"/>
		</entity-one>
		<remove-value value-field="delEntity"/>
		<field-to-result field="parameters.id" result-name="id"/>
	</simple-method>




</simple-methods>
