<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main">
        <section>
            <actions>
                <set field="headerItem" value="main"/><!-- this highlights the selected menu-item with name "main" -->
            </actions>
            <widgets>
                <decorator-screen name="CrudCommonDecorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>
    
    <!-- 查询 -->
    <screen name="table">
    	<section>
    		<actions>
    			 <entity-condition list="crudPersonList" entity-name="CrudPerson"></entity-condition>
    		</actions>
    		<widgets>
    			<platform-specific>
    				<html>
    					<html-template location="component://crud/webapp/crud/table.ftl"/>
    				</html>
    			</platform-specific>
    		</widgets>
    	</section>
    </screen>
    
    <!-- 新增 -->
    <screen name="create">
    	<section>
    		<widgets>
    			<platform-specific>
    				<html>
    					<html-template location="component://crud/webapp/crud/create.ftl"/>
    				</html>
    			</platform-specific>
    		</widgets>
    	</section>
    </screen>
    
    <!-- 修改 -->
    <screen name="update">
    	<section>
    		<actions>
    			<entity-one value-field="crudPerson" entity-name="CrudPerson">
    				<field-map field-name="id" from-field="parameters.id"/>
    			</entity-one>
    		</actions>
    		<widgets>
    			<platform-specific>
    				<html>
    					<html-template location="component://crud/webapp/crud/update.ftl"/>
    				</html>
    			</platform-specific>
    		</widgets>
    	</section>
    </screen>

</screens>