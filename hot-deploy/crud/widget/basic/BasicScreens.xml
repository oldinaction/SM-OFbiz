<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

	<screen name="main">
		<section>
			<actions>
				<set field="headerItem" value="main" /><!-- this highlights the selected menu-item with name "main" -->
			</actions>
			<widgets>
				<decorator-screen name="AezoCommonDecorator" location="${parameters.mainDecoratorLocation}">
					<decorator-section name="body">
					</decorator-section>
				</decorator-screen>
			</widgets>
		</section>
	</screen>

	<screen name="hello">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://crud/webapp/basic/html/hello.ftl" /><!-- 
							只支持文件后缀为ftl的，html、jsp默认解析不了 -->
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>

	<screen name="error">
		<section>
			<widgets>
				<platform-specific>
					<html>
						<html-template location="component://crud/webapp/basic/error/error.ftl" />
					</html>
				</platform-specific>
			</widgets>
		</section>
	</screen>

</screens>