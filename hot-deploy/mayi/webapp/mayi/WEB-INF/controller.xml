<?xml version="1.0" encoding="UTF-8"?>
<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/site-conf.xsd">
	<!-- 引入ofbiz公共控制配置。ofbiz封装的一些常用请求(如：login、logout等)，还有包含了许多handler(如：JavaEventHandler、MacroScreenViewHandler) -->
	<include location="component://common/webcommon/WEB-INF/common-controller.xml" />

	<description>Mayi Component Site Configuration File</description>
	<owner>aezo.cn</owner>

	<!-- Request Mappings -->
	<request-map uri="main"><!-- 访问：https://127.0.0.1:8443/mayi/control/main -->
		<security https="false" auth="false" />
		<response name="success" type="view" value="main" />

	</request-map>
	<!-- end of request mappings -->

	<!-- View Mappings -->
	<view-map name="main" type="screen"
		page="component://mayi/widget/MayiScreens.xml#main" />
	<!-- end of view mappings -->

</site-conf>